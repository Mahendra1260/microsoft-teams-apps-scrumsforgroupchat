{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.5/MicrosoftTeams.schema.json",
  "manifestVersion": "1.5",
  "version": "1.0.0.0",
  "id": "7966210f-b423-4f11-b0aa-fd9af2357fc0",
  "packageName": "com.microsoft.scrumstatus",
  "developer": {
    "name": "FHL2020Team",
    "websiteUrl": "https://www.microsoft.com",
    "privacyUrl": "https://www.teams.com/privacy",
    "termsOfUseUrl": "https://www.teams.com/termsofuser"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "Scrum Bot"
  },
  "description": {
    "short": "Scrum Bot helps you get status updates from your team in group chat.",
    "full": "Scrum Bot is a simple scrum assistant that will enable users to run asynchronous standup meetings and provide and easy way for the users to share their daily updates."
  },
  "accentColor": "#FFCCD8",
  "bots": [
    {
      "botId": "7d1f8c43-475a-4503-9da3-e54b6f5f50d3",
      "scopes": [
        "team"
      ],
      "commandLists": [
        {
          "scopes": [
            "team"
          ],
          "commands": [
            {
              "title": "Start scrum",
              "description": "Enter and review updates from the people in this group chat"
            },
            {
              "title": "End scrum",
              "description": "Stop the current scrum"
            },
			{
              "title": "Report",
              "description": "Generate scrum updates report for specified time range"
            }
			
          ]
        }
      ],
      "supportsFiles": false,
      "isNotificationOnly": false
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "FHL-ScrumsForGroupChat.azurewebsites.net"
  ]
}